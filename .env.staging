# Staging Environment Variables
# These are used for staging/testing deployments

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb+srv://staging-username:staging-password@staging-cluster.mongodb.net/
DB_NAME=AgriIntelV3_Staging

# ========================================
# AUTHENTICATION
# ========================================
NEXTAUTH_URL=https://agri-intel-v3-staging.vercel.app
NEXTAUTH_SECRET=staging-secret-key-minimum-32-characters-long-for-staging-env

# ========================================
# API KEYS (Staging/Test Keys)
# ========================================
GOOGLE_MAPS_API_KEY=your-staging-google-maps-api-key
WEATHER_API_KEY=your-staging-weather-api-key

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
NODE_ENV=staging
ENABLE_DEBUG_LOGS=true
ENABLE_BETA_FEATURES=true
ENABLE_AI_ANALYTICS=false

# ========================================
# PERFORMANCE (Staging Settings)
# ========================================
CACHE_TTL=300
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=300000

# ========================================
# FILE UPLOAD (Staging Settings)
# ========================================
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# ========================================
# MULTI-TENANCY (Staging)
# ========================================
DEFAULT_COUNTRY=ZA
SUPPORTED_COUNTRIES=ZA,NG,KE,GH,TZ

# ========================================
# MONITORING (Staging)
# ========================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
LOG_LEVEL=info